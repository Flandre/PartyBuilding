.top-panel {
	padding: 30rpx;
	background: #fff;
	margin-bottom: 20rpx;
}
.top-panel .title {
	color: #333;
	font-size: 36rpx;
	line-height: 58rpx;
	max-height: 116rpx;
	overflow: hidden;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	text-overflow: ellipsis;
	-webkit-box-orient: vertical;
	margin-bottom: 20rpx;
}
.top-panel .desc {
	display: block;
	color: #333;
	font-size: 28rpx;
	line-height: 44rpx;
	margin-bottom: 30rpx;
}
.top-panel .bottom-info{
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding-bottom: 30rpx;
	border-bottom: 1rpx solid #dbdbdb;
}
.top-panel .bottom-info .tag-list{
	overflow: hidden;
}
.top-panel .bottom-info .tag-list .tag-item{
	display: block;
	font-size: 24rpx;
	background: #9B9B9B;
	color: #FFF;
	line-height: 36rpx;
	padding: 0 5rpx;
	margin-right: 20rpx;
	border-radius: 4rpx;
	float: left;
}
.top-panel .bottom-info .tag-list .tag-item:last-child{
	margin-right: 0;
}
.top-panel .bottom-info .status{
	flex-shrink: 0;
	color: #9B9B9B;
	font-size: 28rpx;
}
.top-panel .bottom-info .status.highlight{
	color: #E60012;
}
.top-panel .source {
	margin-top: 30rpx;
	margin-bottom: 0;
}
.top-panel .source .info{
	font-size: 28rpx;
	line-height: 28rpx;
	color: #9B9B9B;
	margin-bottom: 20rpx;
	display: block;
}
.top-panel .source .info:last-child{
	margin-bottom: 0;
}

.panel {
	padding: 30rpx;
	background: #fff;
	margin-bottom: 20rpx;
}
.panel:last-child {
	margin-bottom: 100rpx;
}
.panel .title{
	display: block;
	color: #333;
	font-size: 28rpx;
	line-height: 1;
	margin-bottom: 30rpx;
}
.impressions {
	padding: 0;
}
.impressions .title{
	padding: 30rpx;
	padding-bottom: 0;
	margin-bottom: 0;
}
.impressions .comment-list {
	padding-left: 30rpx;
	width: 100%;
	box-sizing: border-box;
}
.impressions .comment-list .comment-item{
	padding: 30rpx;
	padding-left: 0;
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
	border-bottom: 1rpx solid #DBDBDB;
}
.impressions .comment-list .comment-item:last-child{
	border-bottom: none;
}
.impressions .comment-list .comment-item .avatar{
	width: 72rpx;
	height: 72rpx;
	border-radius: 36rpx;
	margin-right: 30rpx;
	flex-shrink: 0;
}
.impressions .comment-list .comment-item .comment-main{
	flex-grow: 1;
}
.impressions .comment-list .comment-item .comment-main .user-name{
	display: block;
	color: #9B9B9B;
	font-size: 24rpx;
	line-height: 1;
	margin-bottom: 10rpx;
}
.impressions .comment-list .comment-item .comment-main .comment-content{
	display: block;
	color: #333333;
	font-size: 28rpx;
	line-height: 42rpx;
	margin-bottom: 20rpx;
}
.impressions .comment-list .comment-item .comment-main .reply-list{
	padding: 20rpx;
	background: #F4F4F4;
	margin-bottom: 30rpx;
}
.impressions .comment-list .comment-item .comment-main .reply-list .reply-item{
	font-size: 24rpx;
	line-height: 32rpx;
	margin-bottom: 20rpx;
}
.impressions .comment-list .comment-item .comment-main .reply-list .reply-item:last-child{
	margin-bottom: 0;
}
.impressions .comment-list .comment-item .comment-main .reply-list .reply-item .reply-name,
.impressions .comment-list .comment-item .comment-main .reply-list .reply-item .more{
	color: #E60012;
}
.impressions .comment-list .comment-item .comment-main .reply-list .reply-item .content{
	color: #9B9B9B;
}
.impressions .comment-list .comment-item .comment-main .info-bar{
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 20rpx;
	line-height: 1;
	color: #ABABAB;
}
.impressions .comment-list .comment-item .comment-main .info-bar .source .source-group{
	margin-right: 40rpx;
	display: inline-block;
}
.impressions .comment-list .comment-item .comment-main .info-bar .source .source-group:last-child{
	margin-right: 0;
}
.impressions .comment-list .comment-item .comment-main .info-bar .source .source-group .icon{
	display: inline-block;
	width: 24rpx;
	height: 24rpx;
	vertical-align: middle;
}
.impressions .comment-list .comment-item .comment-main .info-bar .source .source-group .count{
	vertical-align: middle;
	margin-left: 10rpx;
}
.impressions .comment-list .comment-item .comment-main .info-bar .source .source-group.active .count{
	color: #E60012;
}
.impressions .comment-list .comment-item .full{
	display: block;
	width: 100%;
	color: #9B9B9B;
	text-align: center;
	font-size: 24rpx;
	line-height: 44rpx;
}
.impressions .comment-list-empty{
	padding: 100rpx 0 150rpx;
	text-align: center;
}
.impressions .comment-list-empty .empty-text{
	color: #9B9B9B;
	font-size: 28rpx;
}


.comment-container {
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	border-top: 1rpx solid #dbdbdb;
	background: #fff;
	box-sizing: border-box;
	padding: 20rpx 30rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	z-index: 1070;
}
.comment-container .input{
	background: #F1F1F1;
	height: 60rpx;
	box-sizing: border-box;
	flex-grow: 1;
	padding: 0 30rpx;
	font-size: 24rpx;
	border-radius: 8rpx;
}
.comment-container .input-ph {
	color: #9B9B9B;
}
.comment-container .comment-btn{
	color: #9B9B9B;
	font-size: 28rpx;
	margin-left: 30rpx;
	/*width: 40rpx;*/
	/*height: 40rpx;*/
	/*margin-left: 25rpx;*/
	flex-shrink: 0;
}
.comment-container .comment-btn.active{
	color: #E60012;
}