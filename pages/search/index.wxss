.search-container {
	width: 100%;
	height: 100rpx;
	padding: 20rpx 30rpx;
	background: #E60012;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.search-container .search-box{
	width: 605rpx;
	height: 60rpx;
	background: #fff;
	border-radius: 8rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.search-container .search-box .search-icon{
	width: 28rpx;
	height: 28rpx;
	margin-left: 30rpx;
	margin-right: 20rpx;
	flex-shrink: 0;
}
.search-container .search-box .input{
	flex-grow: 1;
	font-size: 24rpx;
}
.search-container .search-box .input-ph{
	color: #9B9B9B;
}
.search-container .cancel{
	color: #fff;
	font-size: 28rpx;
}
.tag-group {
	width: 100%;
	padding: 30rpx;
	background: #fff;
	box-sizing: border-box;
}
.tag-group .group-title {
	display: block;
	color: #333;
	font-size: 28rpx;
	line-height: 28rpx;
}
.tag-group .tag-list {
	margin-left: -15rpx;
	margin-right: -15rpx;
	overflow: hidden;
}
.tag-group .tag-list .tag-item{
	padding: 0 15rpx;
	float: left;
	margin-top: 30rpx;
}
.tag-group .tag-list .tag-item .tag{
	display: block;
	font-size: 24rpx;
	line-height: 36rpx;
	padding: 0 5rpx;
	border: 1px solid #E60012;
	border-radius: 4rpx;
	color: #E60012;
}