.empty-search {
	padding-top: 300rpx;
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.empty-search .icon{
	width: 200rpx;
	height: 200rpx;
}
.empty-search .info{
	color: #9B9B9B;
	font-size: 28rpx;
	margin-top: 60rpx;
}

.article-list {
	background: #fff;
	padding-left: 30rpx;
}
.article-list .article-item{
	padding-right: 30rpx;
	border-bottom: 1rpx solid #dbdbdb;
	padding-top: 20rpx;
	padding-bottom: 30rpx;
}
.article-list .article-item:last-child{
	border-bottom: none;
}
.article-list .article-item .main-info{
	display: flex;
	justify-content: space-between;
	margin-bottom: 20rpx;
}
.article-list .article-item .main-info .title{
	font-size: 36rpx;
	color: #333;
	line-height: 58rpx;
	max-height: 116rpx;
	overflow: hidden;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	text-overflow: ellipsis;
	-webkit-box-orient: vertical;
}
.article-list .article-item .main-info .title-img-box{
	width: 160rpx;
	height: 120rpx;
	background: #F4F4F4;
	margin-left: 30rpx;
	flex-shrink: 0;
}
.article-list .article-item .data-scource {
	display: flex;
	justify-content: space-between;
	align-items: center;
	overflow: hidden;
}
.article-list .article-item .data-scource .keywords{
	overflow: hidden;
}
.article-list .article-item .data-scource .keywords .keyword-item{
	font-size: 24rpx;
	color: #E60012;
	line-height: 36rpx;
	padding: 0 5rpx;
	border: 1rpx solid #E60012;
	margin-right: 20rpx;
	border-radius: 4rpx;
	float: left;
}
.article-list .article-item .data-scource .keywords .keyword-item:last-child{
	margin-right: 0;
}
.article-list .article-item .data-scource .time{
	font-size: 24rpx;
	color: #9B9B9B;
}