.comment-item{
	padding: 30rpx;
	padding-left: 0;
	display: flex;
	justify-content: space-between;
	align-items: flex-start;
	border-bottom: 1rpx solid #DBDBDB;
}
.comment-item:last-child{
	border-bottom: none;
}
.comment-item .avatar{
	width: 72rpx;
	height: 72rpx;
	border-radius: 36rpx;
	margin-right: 30rpx;
	flex-shrink: 0;
}
.comment-item .comment-main{
	flex-grow: 1;
}
.comment-item .comment-main .user-name{
	display: block;
	color: #9B9B9B;
	font-size: 24rpx;
	line-height: 1;
	margin-bottom: 10rpx;
}
.comment-item .comment-main .comment-content{
	display: block;
	color: #333333;
	font-size: 28rpx;
	line-height: 42rpx;
	margin-bottom: 20rpx;
}
.comment-item .comment-main .reply-list{
	padding: 20rpx;
	background: #F4F4F4;
	margin-bottom: 30rpx;
}
.comment-item .comment-main .reply-list .reply-item{
	font-size: 24rpx;
	line-height: 32rpx;
	margin-bottom: 20rpx;
}
.comment-item .comment-main .reply-list .reply-item:last-child{
	margin-bottom: 0;
}
.comment-item .comment-main .reply-list .reply-item .reply-name,
.comment-item .comment-main .reply-list .reply-item .more{
	color: #E60012;
}
.comment-item .comment-main .reply-list .reply-item .content{
	color: #9B9B9B;
}
.comment-item .comment-main .info-bar{
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 20rpx;
	line-height: 1;
	color: #ABABAB;
}
.comment-item .comment-main .info-bar .source .source-group{
	margin-right: 40rpx;
	display: inline-block;
}
.comment-item .comment-main .info-bar .source .source-group:last-child{
	margin-right: 0;
}
.comment-item .comment-main .info-bar .source .source-group .icon{
	display: inline-block;
	width: 24rpx;
	height: 24rpx;
	vertical-align: middle;
}
.comment-item .comment-main .info-bar .source .source-group .count{
	vertical-align: middle;
	margin-left: 10rpx;
}
.comment-item .comment-main .info-bar .source .source-group.active .count{
	color: #E60012;
}
.comment-item .full{
	display: block;
	width: 100%;
	color: #9B9B9B;
	text-align: center;
	font-size: 24rpx;
	line-height: 44rpx;
}

.source-comment {
	background: #fff;
	padding: 0 30rpx;
}
.comment-list {
	padding-left: 46rpx;
}
.comment-list .comment-item .avatar{
	width: 56rpx;
	height: 56rpx;
	border-radius: 28rpx;
}
.comment-list .comment-item .comment-main .comment-content{
	font-size: 24rpx;
	line-height: 32rpx;
}